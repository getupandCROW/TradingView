// -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------- //

// â€”â€”â€”â€”â€” TP Signals
plotshape(Final_Long_tp,  title = "TP Long Signal",         style = shape.diamond,         location = location.abovebar,   color = color.red,  transp = 0, size = size.tiny) 
