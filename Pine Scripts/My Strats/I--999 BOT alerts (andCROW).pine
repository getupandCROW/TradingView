// -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------- //

// â€”â€”â€”â€”â€” Re-entry on long after tp, sl or Xlong
if Final_Long_tp or Final_Long_sl
    CondIni_long    := -1
    sum_long        := 0.0
    nLongs          := na
    
// â€”â€”â€”â€”â€” Re-entry on short after tp, sl or Xshort
if Final_Short_tp or Final_Short_sl
