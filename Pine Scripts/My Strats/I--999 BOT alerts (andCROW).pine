plotshape(Final_Long_sl,  title = "SL Long",                style = shape.triangledown, location = location.abovebar,   color = #FF00FF,    text = "SL", transp = 0) 
plotshape(Final_Short_sl, title = "SL Short",               style = shape.triangleup,   location = location.belowbar,   color = #FF00FF,    text = "SL", transp = 0) 

// â€”â€”â€”â€”â€” Stop Loss Long crosses
lsl                 = iff(Act_sl and Final_Long_sl and (SL_options == "NORMAL"), ((1-(sl/100))*fixnan(Position_Price)),
                      iff(Act_sl and Final_Long_sl and (SL_options == "ATR"), ATR_SL_Long, 
                      iff(Act_sl and Final_Long_sl and (SL_options == "BOTH") and (((1-(sl/100))*fixnan(Position_Price)) > ATR_SL_Long), ((1-(sl/100))*fixnan(Position_Price)), 
                      iff(Act_sl and Final_Long_sl and (SL_options == "BOTH") and (((1-(sl/100))*fixnan(Position_Price)) < ATR_SL_Long), ATR_SL_Long, na))))
plot(lsl,                 title = "SL Long Crosses",        style = plot.style_cross,                                   color = color.white, linewidth = 3)

// â€”â€”â€”â€”â€” Stop Loss Short crosses
ssl                 = iff(Act_sl and Final_Short_sl and (SL_options == "NORMAL"), ((1+(sl/100))*fixnan(Position_Price)),
                      iff(Act_sl and Final_Short_sl and (SL_options == "ATR"), ATR_SL_Short, 
                      iff(Act_sl and Final_Short_sl and (SL_options == "BOTH") and (((1+(sl/100))*fixnan(Position_Price)) < ATR_SL_Short), ((1+(sl/100))*fixnan(Position_Price)), 
                      iff(Act_sl and Final_Short_sl and (SL_options == "BOTH") and (((1+(sl/100))*fixnan(Position_Price)) > ATR_SL_Short), ATR_SL_Short, na))))
plot(ssl,                 title = "SL Short Crosses",       style = plot.style_cross,                                   color = color.white, linewidth=3)

// â€”â€”â€”â€”â€” TP Long Levels
tplLevel            = (in_longCondition and 
                      (last_longCondition > nz(last_long_tp[1])) and 
                      (last_longCondition > nz(last_long_sl[1])) and not Final_Long_sl[1]) ? 
                      (nLongs > 1) ? 
                      (fixnan(Position_Price) * (1 + tp_long)) : (last_open_longCondition * (1 + tp_long)) : na

plot(tplLevel,            title = "Long TP Level",       style = plot.style_circles,                                   color = color.lime,  linewidth = 2)

tpsLevel            = (in_shortCondition and 
                      (last_shortCondition > nz(last_short_tp[1])) and 
                      (last_shortCondition > nz(last_short_sl[1])) and not Final_Short_sl[1]) ? 
                      (nShorts > 1) ? 
                      (fixnan(Position_Price) * (1 - tp_short)) : (last_open_shortCondition * (1 - tp_short)) : na

plot(tpsLevel,            title = "Short TP Level",      style = plot.style_circles,                                   color = color.red,   linewidth = 2)

// â€”â€”â€”â€”â€” Weekend
W_color             = (dayofweek == dayofweek.sunday or dayofweek == dayofweek.saturday) ? color.white : na
bgcolor(W_color,          title = "Weekend",    transp = 95)

