ltp                 = iff(Final_Long_tp,  fixnan(Position_Price) * (1 + tp_long), na)
plot(ltp,                 title = "TP Long Crosses",        style = plot.style_cross,                                   color = color.white,            linewidth = 3)
stp                 = iff(Final_Short_tp, fixnan(Position_Price) * (1 - tp_short), na)
plot(stp,                 title = "TP Short Crosses",       style = plot.style_cross,                                   color = color.white,            linewidth = 3)

